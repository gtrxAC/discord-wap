<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= cname %></title>
    <link rel="stylesheet" href="/wap/style.css">
</head>
<body>
    <div class="main">
        <div style="text-align: center;">
            <form action="/wap/send">
                <input type="hidden" name="id" value="<%= id %>">
                <input type="hidden" name="cname" value="<%= cname %>">
                <input type="hidden" name="token" value="<%= token %>">
                <input type="submit" value="Send message">
            </form>
            <% if (page > 0) { %>
                <form action="/wap/ch">
                    <input type="hidden" name="id" value="<%= id %>">
                    <input type="hidden" name="cname" value="<%= cname %>">
                    <input type="hidden" name="token" value="<%= token %>">
                    <% if (page > 1) { %>
                        <input type="hidden" name="after" value="<%= messages[0].id %>"/>
                        <input type="hidden" name="page" value="<%= page - 1 %>"/>
                    <% } %>
                    <input type="submit" value="Newer messages">
                </form>
            <% } %>
        </div>

        <% messages.forEach(m => { %>
            <form action="/wap/reply">
                <input type="hidden" name="id" value="<%= id %>">
                <input type="hidden" name="cname" value="<%= cname %>">
                <input type="hidden" name="rec" value="<%= m.id %>"/>
                <input type="hidden" name="recname" value="<%= m.author.name %>"/>
                <input type="hidden" name="token" value="<%= token %>">
                <input type="submit" value="<%= m.authorLine %>">
            </form>
            <p>
                <%= m.content %>
            </p>
        <% }) %>

        <div style="text-align: center;">
            <% if (messages.length == messageCount) { %>
                <form action="/wap/ch">
                    <input type="hidden" name="id" value="<%= id %>">
                    <input type="hidden" name="cname" value="<%= cname %>">
                    <input type="hidden" name="token" value="<%= token %>">
                    <input type="hidden" name="before" value="<%= messages[messages.length - 1].id %>"/>
                    <input type="hidden" name="page" value="<%= page + 1 %>"/>
                    <input type="submit" value="Older messages">
                </form>
            <% } %>
        </div>
    </div>
</body>
</html>